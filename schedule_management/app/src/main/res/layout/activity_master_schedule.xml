                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvRowSubject1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Math 101"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-black"
                            android:textColor="#333333"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvRowDetails1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Section A | Room 304"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="2dp"/>

                        <TextView
                            android:id="@+id/tvRowTime1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mon 08:00 - 09:00"
                            android:textSize="14sp"
                            android:textStyle="italic"
                            android:textColor="@color/purple_primary"/>
                    </LinearLayout>

                    <!-- Actions Section -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <Button
                            android:id="@+id/btnRowEdit1"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:text="Edit"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:background="@drawable/btn_rounded_purple"
                            app:backgroundTint="@null"
                            android:stateListAnimator="@null"
                            android:layout_marginBottom="8dp"/>

                        <Button
                            android:id="@+id/btnRowDelete1"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:text="Delete"
                            android:textSize="12sp"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:background="@drawable/btn_rounded_red"
                            app:backgroundTint="@null"
                            android:stateListAnimator="@null"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

