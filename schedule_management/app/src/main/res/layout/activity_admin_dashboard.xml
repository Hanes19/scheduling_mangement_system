<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F8">

    <!-- Header Background Shape -->


    <!-- Admin Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Dashboard"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"/>

    <!-- Main Content Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textColor="#555555"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <!-- Add Class Button -->
            <Button
                android:id="@+id/btnAddClass"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Add New Class"
                android:drawableStart="@android:drawable/ic_input_add"
                android:drawablePadding="16dp"
                android:paddingStart="24dp"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"/>

            <!-- Manage Users Button -->
            <Button
                android:id="@+id/btnManageInstructors"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Manage Instructors"
                android:drawableStart="@android:drawable/ic_menu_my_calendar"
                android:drawablePadding="16dp"
                android:paddingStart="24dp"
                android:textAlignment="viewStart"
                android:backgroundTint="#E0E0E0"
                android:textColor="#333333"
                android:layout_marginBottom="16dp"/>

            <!-- View All Schedule Button -->
            <Button
                android:id="@+id/btnViewSchedule"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="View Master Schedule"
                android:drawableStart="@android:drawable/ic_menu_agenda"
                android:drawablePadding="16dp"
                android:paddingStart="24dp"
                android:textAlignment="viewStart"
                android:backgroundTint="#E0E0E0"
                android:textColor="#333333"
                android:layout_marginBottom="32dp"/>

            <!-- Logout -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:backgroundTint="#FF5252"
                android:textColor="#FFFFFF"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>