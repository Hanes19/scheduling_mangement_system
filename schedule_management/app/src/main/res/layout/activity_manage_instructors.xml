<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_main_gradient"
    android:padding="32dp">

    <!-- Fixed Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <!-- Back Button (Top Left) -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back_btn"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:contentDescription="Back"
            app:tint="#333333"
            android:layout_gravity="start"
            android:layout_marginBottom="8dp"/>

        <!-- Title (Centered below button) -->
        <TextView
            android:id="@+id/tvWelcomeStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register Instructor"
            android:textSize="32sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/text_dark"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <!-- Scrollable Form & List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add a new teacher to the system"
                android:textSize="16sp"
                android:textColor="#757575"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center_horizontal"/>

            <!-- Name Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/etInstName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_rounded"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="e.g. John Doe"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:inputType="textPersonName"
                android:layout_marginBottom="16dp"/>

            <!-- Department Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/etInstDept"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_rounded"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="e.g. Information Technology"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:inputType="textCapWords"
                android:layout_marginBottom="16dp"/>

            <!-- Subject Input (NEW) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/etInstSubject"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_rounded"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="e.g. Programming 1"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:inputType="textCapWords"
                android:layout_marginBottom="16dp"/>

            <!-- Year & Section Row (NEW) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginBottom="16dp">

                <!-- Year Input -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Year"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="6dp"/>

                    <EditText
                        android:id="@+id/etInstYear"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_input_rounded"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:hint="e.g. 1"
                        android:textColor="#333333"
                        android:textColorHint="#999999"
                        android:textSize="16sp"
                        android:inputType="number"/>
                </LinearLayout>

                <!-- Section Input -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Section"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="6dp"/>

                    <EditText
                        android:id="@+id/etInstSection"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_input_rounded"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:hint="e.g. A"
                        android:textColor="#333333"
                        android:textColorHint="#999999"
                        android:textSize="16sp"
                        android:inputType="textCapCharacters"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Login ID Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="System Login ID"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/etInstID"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_rounded"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="e.g. teacher_01"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:inputType="text"
                android:layout_marginBottom="16dp"/>

            <!-- Password Input (NEW) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/etInstPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_rounded"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="••••••••"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:layout_marginBottom="24dp"/>

            <!-- Add Button -->
            <Button
                android:id="@+id/btnAddInstructor"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Add to System"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/btn_rounded_purple"
                app:backgroundTint="@null"
                android:elevation="4dp"
                android:stateListAnimator="@null"
                android:layout_marginBottom="32dp"/>

            <!-- List Divider/Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:text="Current Instructors"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/text_dark"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llInstructorListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Sample Instructor 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginHorizontal="4dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical">

                        <!-- Info -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mr. John Doe"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-black"
                                android:textColor="#333333"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="IT Dept • Programming 1"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:layout_marginBottom="2dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ID: teacher_01"
                                android:textSize="12sp"
                                android:textColor="@color/purple_primary"/>
                        </LinearLayout>

                        <!-- Actions -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Button
                                android:layout_width="80dp"
                                android:layout_height="35dp"
                                android:text="Edit"
                                android:textSize="12sp"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:background="@drawable/btn_rounded_purple"
                                app:backgroundTint="@null"
                                android:stateListAnimator="@null"
                                android:layout_marginBottom="8dp"/>

                            <Button
                                android:layout_width="80dp"
                                android:layout_height="35dp"
                                android:text="Delete"
                                android:textSize="12sp"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:background="@drawable/btn_rounded_red"
                                app:backgroundTint="@null"
                                android:stateListAnimator="@null"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Sample Instructor 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginHorizontal="4dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical">

                        <!-- Info -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ms. Sarah Smith"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-black"
                                android:textColor="#333333"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Science Dept • Physics"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:layout_marginBottom="2dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ID: teacher_02"
                                android:textSize="12sp"
                                android:textColor="@color/purple_primary"/>
                        </LinearLayout>

                        <!-- Actions -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Button
                                android:layout_width="80dp"
                                android:layout_height="35dp"
                                android:text="Edit"
                                android:textSize="12sp"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:background="@drawable/btn_rounded_purple"
                                app:backgroundTint="@null"
                                android:stateListAnimator="@null"
                                android:layout_marginBottom="8dp"/>

                            <Button
                                android:layout_width="80dp"
                                android:layout_height="35dp"
                                android:text="Delete"
                                android:textSize="12sp"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:background="@drawable/btn_rounded_red"
                                app:backgroundTint="@null"
                                android:stateListAnimator="@null"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Sample Instructor 3 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginHorizontal="4dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical">

                        <!-- Info -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dr. Emily Brown"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-black"
                                android:textColor="#333333"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Arts Dept • Literature"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:layout_marginBottom="2dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ID: teacher_03"
                                android:textSize="12sp"
                                android:textColor="@color/purple_primary"/>
                        </LinearLayout>

                        <!-- Actions -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Button
                                android:layout_width="80dp"
                                android:layout_height="35dp"
                                android:text="Edit"
                                android:textSize="12sp"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:background="@drawable/btn_rounded_purple"
                                app:backgroundTint="@null"
                                android:stateListAnimator="@null"
                                android:layout_marginBottom="8dp"/>

                            <Button
                                android:layout_width="80dp"
                                android:layout_height="35dp"
                                android:text="Delete"
                                android:textSize="12sp"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:background="@drawable/btn_rounded_red"
                                app:backgroundTint="@null"
                                android:stateListAnimator="@null"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>